    <h1 id=header_title>
        villains
    </h1>
    <nav>
    	<ul class="topnav">
    		<li><a href="/villain">Home</a></li>
    		<li>
                <a id="active" href="/villains/new">
                        <img src=<%= image_url('profile_img.jpg') %> alt="Profile Pic" height="20" width="20">
